# Optimized .dockerignore for minimal build context and faster builds

# Dependencies (installed in container)
node_modules/
npm-debug.log*
.npm/

# Development and testing
test/
tests/
__tests__/
*.test.js
*.spec.js
jest.config.js
coverage/
.nyc_output/

# Development tools
.eslintrc*
.prettierrc*
nodemon.json
.vscode/
.idea/

# Environment and secrets
.env*
!.env.example

# Documentation
README.md
*.md
docs/

# Version control
.git/
.gitignore

# Docker files (avoid recursion)
Dockerfile*
.dockerignore*
docker-compose*.yml

# Build artifacts
dist/
build/
.cache/

# Logs and runtime
logs/
*.log
*.pid

# OS files
.DS_Store
Thumbs.db

# Temporary files
tmp/
temp/
*.tmp

# Database files (created in container)
database/*.sqlite
database/*.db

# Package manager
yarn.lock

# Backup files
*.bak
*~
